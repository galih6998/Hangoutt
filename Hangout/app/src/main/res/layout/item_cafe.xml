<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:id="@+id/cv_cafe"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/img_cafe"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/txt_nama_cafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_cafe"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:text="Cafe"
            android:fontFamily="@font/lobstertwo_bold"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_deskripsi_cafe"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/txt_nama_cafe"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:text="Ini Deskripsi"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>